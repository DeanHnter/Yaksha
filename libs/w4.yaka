@nativedefine("((uint32_t*)0x04)")
def palette() -> Ptr[u32]:
    # Get a pointer to pallet
    pass

@native
def set_palette(c1: u32, c2: u32, c3: u32, c4: u32) -> None:
    # Set palette
    ccode """
    ((uint32_t*)0x04)[0] = nn__c1;
    ((uint32_t*)0x04)[1] = nn__c2;
    ((uint32_t*)0x04)[2] = nn__c3;
    ((uint32_t*)0x04)[3] = nn__c4;
    """

